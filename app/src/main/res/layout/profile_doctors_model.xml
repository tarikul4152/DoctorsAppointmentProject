        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dr.Nayeem Mollick Joy"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MBBS,FCPS,MBBS,FCPS,MBBS,FCPS"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Specialist:Medicine , Heart,Medicine , Heart"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location : Uttara , Gazipur"
            android:textSize="18sp"/>
    </LinearLayout>

</LinearLayout>